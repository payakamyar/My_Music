<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearlayout"
        android:background="@drawable/round_teal_dark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:transitionName="bottom_playback">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="32dp">
            <ImageView
                android:id="@+id/small_artwork"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="17">
            <TextView
                android:id="@+id/small_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/small_artist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/small_reverse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:background="@drawable/ic_reverse" />
            <Button
                android:id="@+id/small_playback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_pause"
                android:layout_margin="4dp"/>
            <Button
                android:id="@+id/small_forward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_forward"
                android:layout_margin="4dp"/>
        </LinearLayout>

</LinearLayout>